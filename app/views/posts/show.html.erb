<!-- Headline -->
<div id="tf-page-header" class="layout-two text-center">
  <div class="container">
    <h5><em>Lifestyle Post</em></h5>
    <hr>
    <h2 class="text-uppercase">Our Honest Experience</h2>
  </div>
</div>

<div id="tf-content" class="layout-two">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="blog-post">
          <div class="post-detail">
            
            <%= render 'post', post: @post %>
          
            <!--Post Body-->
            <div class="post-content">
              <%= @post.body.html_safe %>
            </div>
            
            <!--Youtube Video-->
            <h5 class="text-center">
              <% if @post.video.present? %>
               <span class="bolder">Conscioux Video Post</span>
                <div class="embed-container"> 
                  <%= embed(@post.video) %>
                </div>
              <% end %>
            </h5>

          </div>
        
          <!--Author Information-->
          <div class="author-box">
            <div class="media text-center">
              
              <!-- User Image -->
              <div class="col-md-12">
                <%= link_to image_tag(@post.user.profile.image, width: 150, height: 150, class: "img-responsive"), profile_path(@post.user.profile) %>
              </div>

              <!-- User Name and Bio -->
              <div class="col-md-8">
                <div class="media-body">
                  <h4 class="media-heading">Created by <%= @post.user.profile.first_name %></h4>
                  <p><%= @post.user.profile.bio %></p>
                </div> 
              </div>
              
              <!-- Edit and Delete Buttons -->
              <% if user_signed_in? && (current_user == @post.user) %>| 
                <%= link_to "Edit this Post", edit_post_path(@post), class: "edit-btn" %> |
                <%= link_to "Delete this Post", post_path, method: :delete, 
                                                    data: { confirm: "Are you sure you want to delete this post?" }, 
                                                    class: "delete-btn" %>
              <% end %>

            </div>
          </div>
        
          <div class="text-center">    
            <%= link_to "Back to Blog Articles", posts_path, class: "btn btn-block tf-btn center" %> 
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
