<!-- Headline -->
<div id="tf-page-header" class="layout-two text-center">
  <div class="container">
    <h5><em>Lifestyle Post</em></h5>
    <hr>
    <h2 class="text-uppercase">Our Honest Experience</h2>
  </div>
</div>

<div id="tf-content" class="layout-two">
  <div class="container">
    <div class="row">

      <div class="col-md-8">
        <div class="blog-post">
          <div class="post-detail">
            
            <%= render 'post', post: @post %>
          
            <!--Post Body-->
            <div class="post-content">
              <%= @post.body.html_safe %>
            </div>
            
            <!--Youtube Video-->
            <h5 class="text-center">
              <% if @post.video.present? %>
               <span class="bolder">Conscioux Video Post</span>
                <div class="embed-container"> 
                  <%= embed(@post.video) %>
                </div>
              <% end %>
            </h5>
          </div>

          <!-- Edit and Delete Buttons -->
          <% if user_signed_in? && (current_user == @post.user) %>| 
            <%= link_to "Edit this Post", edit_post_path(@post), class: "edit-btn" %> |
            <%= link_to "Delete this Post", post_path, method: :delete, 
                                                data: { confirm: "Are you sure you want to delete this post?" }, 
                                                class: "delete-btn" %>
          <% end %>
        

        </div>
          <div class="text-center">    
            <%= link_to "Back to All Posts", posts_path, class: 'btn btn-default btn-block tf-btn color' %> 
          </div>
      </div>

      <div class="col-md-4">
        <div class="sidebar">
          <div class="widget recent">
            <h4>Recent Posts</h4>
            <div class="widget-wrap">
              <% @posts.each do |post| %>
                <div class="thumb-post">
                  <%= link_to post_path(@post) do %>
                    <div class="info">
                      <h3 class="media-heading"><%= post.title %></h3>
                       <%= image_tag(post.image, class: "img-responsive") %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
