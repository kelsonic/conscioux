<!-- Headline -->
<div id="tf-page-header" class="layout-two text-center">
  <div class="container">
    <h5><em>Ethical and Glamorous</em></h5>
    <hr>
    <h2 class="text-uppercase">Lifestyle Blog</h2>
  </div>
</div>

<div id="tf-content" class="layout-two">
  <div class="container">
    
    <!-- New Post Link -->
    <div class="col-md-6 col-md-offset-3">
      <% if user_signed_in? %>
        <%= link_to 'New Lifestyle post', new_post_path, class: 'btn btn-default btn-block tf-btn color' %>
      <% end %>
    </div>
    
    <!-- List Posts -->
    <div class="row">
      <% @posts.each do |post| %>

        <div class="col-md-8 col-md-offset-2">
          <div class="blog-post">
            <div class="post-detail">
              
              <!-- Post Info -->
              <%= render 'post', post: post %>
              
              <!-- Post Show Page Link -->
              <div class="text-center col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
                <%= link_to 'Read More', post_path(post), class: 'btn btn-default btn-block tf-btn color' %>
              </div>

            </div>  
          </div>
        </div>

      <% end %> 
    </div>

  </div>
</div>


