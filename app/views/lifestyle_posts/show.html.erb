<p id="notice"><%= notice %></p>


<div id="tf-page-header" class="layout-two text-center">
  <div class="container">
    <h5><em>Lifestyle Post</em></h5>
    <hr>
    <h2 class="text-uppercase">Our Honest Experience</h2>
  </div>
</div>


<div id="tf-content" class="layout-two">
  <div class="container">
    <div class="row">
      <div class="col-md-8"> <!-- Left Content for Blog Posts -->
        <div class="blog-post">
          <div class="post-detail">
            
            <!--Date of Review-->
            <a href="achives.html" class="meta-date">
              <span class="bolder">
                <%= @lifestyle_post.created_at.strftime("%d") %>
              </span>
              <%= @lifestyle_post.created_at.strftime("%b") %>
            </a>
            <!--End Date of Review-->
            
            <!--Review Title-->
            <h2><%= @lifestyle_post.topic %></h2> <!-- Post Title-->
            
            <!--Review Image and Tag Lines-->
            <div class="img-wrap">
              <div class="metas">
                <a href="#" class="meta-author"><%= @lifestyle_post.city %></a>
                <a href="#" class="meta-cat"><%= @lifestyle_post.country %></a>
              </div>
              <%= image_tag(@lifestyle_post.image, class: "img-responsive") if @lifestyle_post.image? %>
            </div>
            <!--End Review Image and Tag Lines-->
          </div>
          
          <!--Product Shop and Address-->
          <h5 class="text-center"><em> Experienced at <%= @lifestyle_post.city %>,
          <%= @lifestyle_post.country %>.</em></h5><hr>
          
          <!--Product Review Body-->
          <div class="post-content"> <!-- Post Main Content -->
            <%= @lifestyle_post.body.html_safe %>
          </div>
          
          <!--Youtube Video-->
          <h5 class="text-center">
          <% if @lifestyle_post.video.present? %>
           <span class="bolder">Conscioux Video Review</span>
            <div class="embed-container"> 
              <%= embed(@lifestyle_post.video) %>
            </div>
          <% end %>
          </h5>
          <!--End Youtube Video-->
        
        <!-- End Blog Post -->
        </div>
        
        <!--Author Information-->
        <div class="author-box"> <!-- About the Post Author -->
          <div class="media text-center">
            <div class="col-md-4">
              <%= link_to user_path(@lifestyle_post.user) do %>
                <%= image_tag(@lifestyle_post.user.image, width: 150, height: 150, class: "img-responsive") %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="media-body">
                <h4 class="media-heading">Reviewed by: <%= @lifestyle_post.user.first_name %></h4> <!-- Author name -->
                <%= @lifestyle_post.user.description %>
               </div> 
            </div>
           
            <% if user_signed_in? && (current_user == @lifestyle_post.user || current_user.admin?) %>| 
              <%= link_to "Edit this Review", edit_lifestyle_post_path(@lifestyle_post), class: "btn btn-xs btn-warning" %> |
              <%= link_to "Delete this Review", lifestyle_post_path, method: :delete, 
                                                  data: { confirm: "Are you sure you want to delete this review?" }, 
                                                  class: "btn btn-xs btn-danger" %>
            <% end %>
          </div>
        </div> <!-- end About the Post Author -->
        
        <div class="text-center">    
           <%= link_to "Back to All Reviews", lifestyle_post_path, class: "btn btn-xs tf-btn center" %> 
        </div>
    </div><!-- End of Posts/Blogrol -->

    <div class="col-md-4"> <!-- Right content for sidebar and widget area-->
      <div class="sidebar"><!-- sidebar -->

        <div class="widget search"><!-- Search Widget -->
          <div class="widget-wrap">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
              </span>
            </div><!-- /input-group -->
          </div>
        </div>

        <div class="widget recent"><!-- Recent Post Widget -->
          <h4>Recent Reviews</h4>
          <div class="widget-wrap">
            <% @lifestyle_posts.each do |review| %>
              <div class="thumb-post"><!-- Thumbnail Post #1 -->
                <%= link_to review do %>
                  <div class="info">
                    <h3 class="media-heading"><%= review.topic %></h3>
                     <%= image_tag(review.image, class: "img-responsive") %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
            
        </div>
      </div>
    </div>
  </div>
</div>
