<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@lifestyle_post, html: {multipart: true}) do |f| %>
      <% if @lifestyle_post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@lifestyle_post.errors.count, "error") %> prohibited this cosmetics_review from being saved:</h2>
    
          <ul>
          <% @lifestyle_post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :topic, "Topic" %>
        <%= f.select :topic, ['Yoga', 'Restaurant', 'Shop', 'Diet', 'Workout', 'Bar'], {}, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :country %><br>
        <%= f.text_field :country, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :people %><br>
        <%= f.text_field :people, class: 'form-control' %>
      </div>

      <div class="file-field input-field">
          <%= f.label :image %><br>
          <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: "btn btn-default" %>
      </div>
      
      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :body %><br>
        <%= f.text_area :body, rows: 20, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :takeaways %><br>
        <%= f.text_area :takeaways, rows: 5, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :video, "Full Youtube URL" %><br>
        <%= f.text_field :video, class: 'form-control' %>
      </div>
    
      <div class="actions">
        <%= f.submit 'Submit', class: 'btn btn-default btn-block tf-btn color' %>
      </div>

    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#recipe_picture').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024 /1024;
    if (size_in_megabytes > 1) {
      alert('Maximum file size is 1MB. Please choose a smaller file.')
    }
  });
</script>
