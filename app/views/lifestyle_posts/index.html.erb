<p id="notice"><%= notice %></p>

<h1>Listing Lifestyle Posts</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>City</th>
      <th>Country</th>
      <th>Title</th>
      <th>Body</th>
      <th>Takeaways</th>
      <th>People</th>
      <th>Image</th>
      <th>Video</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lifestyle_posts.each do |lifestyle_post| %>
      <tr>
        <td><%= lifestyle_post.topic %></td>
        <td><%= lifestyle_post.city %></td>
        <td><%= lifestyle_post.country %></td>
        <td><%= lifestyle_post.title %></td>
        <td><%= lifestyle_post.body %></td>
        <td><%= lifestyle_post.takeaways %></td>
        <td><%= lifestyle_post.people %></td>
        <td><%= lifestyle_post.image %></td>
        <td><%= lifestyle_post.video %></td>
        <td><%= lifestyle_post.user_id %></td>
        <td><%= link_to 'Show', lifestyle_post %></td>
        <td><%= link_to 'Edit', edit_lifestyle_post_path(lifestyle_post) %></td>
        <td><%= link_to 'Destroy', lifestyle_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lifestyle post', new_lifestyle_post_path %>
