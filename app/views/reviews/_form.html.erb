<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@cosmetics_review, html: {multipart: true}) do |f| %>
      <!--< if @cosmetics_review.errors.any? %>-->
      <!--  <div id="error_explanation">-->
      <!--    <h2><= pluralize(@cosmetics_review.errors.count, "error") %> prohibited this cosmetics_review from being saved:</h2>-->
    
      <!--    <ul>-->
      <!--    < @cosmetics_review.errors.full_messages.each do |message| %>-->
      <!--      <li><= message %></li>-->
      <!--    < end %>-->
      <!--    </ul>-->
      <!--  </div>-->
      <!--< end %>-->
      
      <div class="form-group">
        <%= f.label :type_tag, "Product Type" %>
        <%= f.select :type_tag, ['Makeup', 'Body and Bath', 'Hair'], {}, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :specific_type_tag, "Specific Product Type" %>
        <%= f.select :specific_type_tag, ['Facial Cream', 'Body Lotion', 'Hand Cream', 'Bath Oil', 'Body Oil', 'Shampoo', 'Conditioner', 'Hair Oil', 'Hair Mask', 'Hair Spray',
        'Lipstick', 'Lipgloss', 'Bronzer', 'Foundation', 'BB Creme', 'Concealer', 'Highlighter', 'Eye Shadow', 
        'Mascara', 'Eye Liner', 'Nail Polish', 'Powder', 'Eyebrow Makeup'], {}, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :gender, "Target Group" %>
        <%= f.select :gender, ['Women', 'Men'], {}, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :brand %><br>
        <%= f.text_field :brand, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :product_name %><br>
        <%= f.text_field :product_name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :store %><br>
        <%= f.text_field :store, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :city %><br>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :country %><br>
        <%= f.text_field :country, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :company_website, "Product Brand Website" %><br>
        <%= f.text_field :company_website, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :price, "Approximate Price in Euros (For example: 39,95. Only numbers)." %><br>
        <%= f.text_field :price, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :quantity, "Quantity (For example: 200ml or 3 pieces)." %><br>
        <%= f.text_field :quantity, class: 'form-control' %>
      </div>
      
      <div class="file-field input-field">
          <%= f.label :image %><br>
          <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: "btn btn-default" %>
      </div>
      
      <div class="form-group">
        <%= f.label :cosmetics_review_title %><br>
        <%= f.text_field :cosmetics_review_title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :cosmetics_review_body %><br>
        <%= f.text_area :cosmetics_review_body, rows: 20, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :video, "Full Youtube URL" %><br>
        <%= f.text_field :video, class: 'form-control' %>
      </div>
    
      <div class="actions">
        <%= f.submit 'Submit', class: 'btn btn-default btn-block tf-btn color' %>
      </div>
      <br>
      <br>
      <br>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#recipe_picture').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024 /1024;
    if (size_in_megabytes > 1) {
      alert('Maximum file size is 1MB. Please choose a smaller file.')
    }
  });
</script>