<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @review do |f| %>
      
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :rating %>
        <%= f.number :rating, step: 'any', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :store %><br>
        <%= f.text_field :store, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :city %><br>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :country %><br>
        <%= f.text_field :country, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :image %><br>
        <%= f.text_field :image, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :video, "Full YouTube URL" %><br>
        <%= f.text_field :video, class: 'form-control' %>
      </div>
    
      <div class="actions">
        <%= f.submit 'Submit', class: 'btn btn-default btn-block tf-btn color' %>
      </div>
      
    <% end %>
  </div>
</div>