<% unless user_signed_in? %>

  <li><%= link_to "Log In", new_user_session_path %></li>
  
<% else %>

  <li class="dropdown">

    <!-- First Name Link to User Profile -->
    <%= link_to "#{current_user.profile.first_name}<b class='caret'></b>".html_safe, profile_path(current_user.profile), class: "dropdown-toggle", id: "user-profile", data: { toggle: 'dropdown' }, role: "button", "aria-expanded" => "false" %>

    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "Edit Profile", edit_user_registration_path(current_user) %></li>
      <li><%= link_to "View Profile", profile_path(current_user) %></li>
      
      <li class="divider"></li>
      <li><%= link_to "Logout", destroy_user_session_path, method: :delete %> </li>
    </ul>

  </li>

<% end %>