<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@cosmetics_review) do |f| %>
      <% if @cosmetics_review.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@cosmetics_review.errors.count, "error") %> prohibited this cosmetics_review from being saved:</h2>
    
          <ul>
          <% @cosmetics_review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :type_tag, "Product Type" %>
        <%= f.select :type_tag, ['Makeup', 'Body and Bath', 'Hair'], {}, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :gender, "Target Group" %>
        <%= f.select :gender, ['Men', 'Women'], {}, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :brand %><br>
        <%= f.text_field :brand, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :product_name %><br>
        <%= f.text_field :product_name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :store %><br>
        <%= f.text_field :store, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :city %><br>
        <%= f.text_field :city, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :country %><br>
        <%= f.text_field :country, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :cosmetics_review_title %><br>
        <%= f.text_field :cosmetics_review_title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :cosmetics_review_body %><br>
        <%= f.text_area :cosmetics_review_body, rows: 20, class: 'form-control' %>
      </div>
    
      <div class="actions">
        <%= f.submit 'Submit', class: 'btn btn-default btn-block tf-btn color' %>
      </div>
      <br>
      <br>
      <br>
    <% end %>
  </div>
</div>