<div class="row text-center">
  <div id="tf-page-header" class="text-center">
    <div class="container">
      <h5><em>Exclusive and Eco-friendly</em></h5>
      <hr>
      <h2 class="text-uppercase">Makeup</h2>
    </div>
  </div>
</div>


<div id="vlamorous-content">
  <div class="container"><!-- Container -->
    <div class="row"><!-- Row -->
      <div class="col-md-8"> <!-- Left Content for Blog Posts -->
        <div class="post-block"> <!-- Post #1-->
          <div class="post-detail">
            <div class="post-detail text-center">
              <h4>Honest reviews about honest brands.</h4> 
              <h5 class="uncondensed">Only vegan, organic products, that are not tested on animals.</h5>
            </div>
            <div class="row">
              <div class="col-col-md-10 col-sm-12 col-xs-12">
                <%= link_to 'Read More', about_path, class: 'btn btn-default btn-block tf-btn color' %>
              </div>
            </div>
          </div><!-- end Post #1-->

          <% @cosmetics_reviews.each do |review| %> 
              <div class="ih-item square effect10 bottom_to_top">
                <%= link_to review do %>
                  <%= image_tag(review.image, class: "img") %>
                  <div class="info">
                    <h3><%= review.product_name %></h3>
                    <p><%= review.brand %></p>
                  </div>
                <% end %>
              </div>
          <% end %>
          </div><!-- End of Posts/Blogrol -->
        </div>

          <div class="col-md-4"> <!-- Right content for sidebar and widget area-->
            <div class="sidebar"><!-- sidebar -->
              <div class="widget search"><!-- Search Widget -->
                <div class="widget-wrap">
                  <%= form_tag(search_pages_path, role: "search") do %>
                  <div class="input-group">
                    <%= text_field_tag :search_cosmetics, nil, placeholder: "Search Reviews", class: "form-control" %>
                    <span class="input-group-btn">
                    <%= submit_tag "Search", class: "btn btn-default" %>
                    </span>
                  <% end %>
                  </div><!-- /input-group -->
                </div>
              </div>
  
              <div class="widget recent"><!-- Recent Post Widget -->
                <h4>Recent Reviews</h4>
                <div class="widget-wrap">
                  <% @cosmetics_reviews.each do |review| %>
                    <div class="thumb-post"><!-- Thumbnail Post #1 -->
                      <%= link_to review do %>
                        <div class="info">
                          <h3 class="media-heading"><%= review.cosmetics_review_title %></h3>
                           <%= image_tag(review.image, class: "img-responsive") %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            
        </div><!-- end sidebar -->
      </div><!-- end Right content for sidebar and widget area-->
    </div><!-- end Row -->
  </div><!-- End Container -->
</div>
