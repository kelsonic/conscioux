<div class="row text-center">
  <div id="tf-page-header" class="text-center">
    <div class="container">
      <h5><em>Exclusive and Eco-friendly</em></h5>
      <hr>
      <h2 class="text-uppercase">Cosmetics</h2>
    </div>
  </div>
</div>

<div id="vlamorous-content">
  <div class="container"><!-- Container -->
    <div class="row"><!-- Row -->
      <div class="col-md-8 col-md-offset-2"> <!-- Left Content for Blog Posts -->
        <div class="post-block"> <!-- Post #1-->
          <h3 class="media-heading">Be Vlamorous</h3>
          
          <div class="post-detail text-center">
            <h4>Look and feel your best with ethical luxury cosmetics.</h4> 
            <h5 class="uncondensed">We write honest reviews about honest products. We help you make 
            responsible choices without compromising on luxury.</h5>
          </div>
          
          <div class="row">
            <div class="col-col-md-10 col-sm-12 col-xs-12">
              <%= link_to 'Read More', about_path, class: 'btn btn-default btn-block tf-btn color' %>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
</div>
 
<div class="container">
  <div class="row">
    <div class="cosmetics-categories">
      
      <div class="col-lg-3 col-lg-offset-1 col-md-4 col-sm-6 col-xs-10 col-xs-offset-1">
        <div class="hovereffect">
          <%= image_tag("makeup.jpg", class: "img-responsive") %>
          <div class="overlay">
            <h2>Makeup</h2>
            <a class="info" href="/makeup">Go!</a>
          </div>
        </div>
      </div>
      
      <div class="col-lg-3 col-lg-offset-1 col-md-4 col-sm-6 col-xs-10 col-xs-offset-1">
        <div class="hovereffect">
          <%= image_tag("body.jpg", class: "img-responsive") %>
          <div class="overlay">
            <h2>Body & Bath</h2>
             <a class="info" href="/bodybath">Go!</a>
          </div>
        </div>
      </div>
      
      <div class="col-lg-3 col-lg-offset-1 col-md-4 col-sm-6 col-xs-10 col-xs-offset-1">
        <div class="hovereffect">
          <%= image_tag("hair.jpg", class: "img-responsive") %>
          <div class="overlay">
            <h2>Hair</h2>
             <a class="info" href="/hair">Go!</a>
          </div>
        </div>
      </div>
    </div> <!--Close cosmetics categories-->
  </div>


  <div class="choose-cosmetics">
    <div class="row">
      <div class="text-center col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
        <%= link_to 'See All Cosmetics Reviews', cosmetics_reviews_path, class: 'btn btn-default btn-block tf-btn color' %>
        
        <% if user_signed_in? %>
          <%= link_to 'Write New Cosmetics Review', new_cosmetics_review_path, class: 'btn btn-default btn-block tf-btn color' %>
        <% end %>
        
      </div>
    </div>
  </div>
</div>


