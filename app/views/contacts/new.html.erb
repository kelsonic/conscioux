<div class="row">
  <div id="tf-page-header" class="text-center">
    <div class="container">
      <h5><em>Feel free to get in touch!</em></h5>
      <hr>
      <h2 class="text-uppercase">Contact Us</h2>
    </div>
  </div>
  
<div id="tf-content" class="contact">
  <div class="container"><!-- Container -->
    <div class="row"><!-- Row -->
      <div class="col-md-10 col-md-offset-1"> <!-- About us content -->
        <div class="post-block"> 
          <div class="post-detail">
            
            <form id="contact-form" class="form">
              <div class="row">
                <%= form_for @contact do |f| %>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: 'form-control' %>
                  </div>
                </div>
                
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: 'form-control' %>
                  </div>
                </div>
                
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.label :comments, "Message" %>
                    <%= f.text_area :comments, rows: 6, class: 'form-control' %>
                   </div>
                </div>
                 
                <%= f.submit 'Submit', class: 'btn btn-default btn-block tf-btn color' %>
                <% end %>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="col-md-10 col-md-offset-1">
         <h3 class="text-center white">Want us to review your product?</h3>
      </div>
      
      <div class="text-center col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
          <%= link_to 'Read More', request_review_path, class: 'btn btn-default btn-block tf-btn color' %>
      </div>
      
    </div>
  </div>
</div>