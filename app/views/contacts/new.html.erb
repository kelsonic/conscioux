<div class="row">
  <div id="tf-page-header" class="text-center">
    <div class="container">

      <h5><em>Feel free to get in touch!</em></h5>
      <hr>
      <h2 class="text-uppercase">Contact Us</h2>
      
    </div>
  </div>
</div>
  
<div id="tf-content" class="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="post-block"> 
          <div class="post-detail">

            <%= render 'form' %>

            <div class="col-md-10 col-md-offset-1 request-review-block">
              <h3 class="text-center white">Want us to review your product?</h3>
            </div>
            
            <div class="text-center col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
              <%= link_to 'Read More', request_review_path, class: 'btn btn-default btn-block tf-btn color' %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>