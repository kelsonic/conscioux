<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@category) do |f| %>
      
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    
      <div class="actions">
        <%= f.submit 'Create', class: 'btn btn-default btn-block tf-btn color' %>
      </div>

    <% end %>
  </div>
</div>